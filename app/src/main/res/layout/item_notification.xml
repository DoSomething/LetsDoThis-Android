<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/padding_medium">

    <org.dosomething.letsdothis.ui.views.CircleImageView
        android:id="@+id/image"
        android:layout_width="@dimen/notification_image"
        android:layout_height="@dimen/notification_image"
        android:layout_marginRight="@dimen/padding_medium"
        app:border_width="0dp"
        app:border_color="@color/white"
        app:background_color="@color/white"
        tools:src="@drawable/user_image"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <org.dosomething.letsdothis.ui.views.typeface.CustomTextView
            android:id="@+id/title"
            android:textAllCaps="true"
            app:typeface="brandon_bold"
            android:textSize="@dimen/text_30"
            android:textColor="@color/sunglow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="MUSIC MARCH OUT"/>

        <org.dosomething.letsdothis.ui.views.typeface.CustomTextView
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/details"
            tools:text="Just three days left to finish this monthâ€™s actions."/>

        <org.dosomething.letsdothis.ui.views.typeface.CustomTextView
            android:id="@+id/timestamp"
            android:layout_marginTop="12dp"
            android:textColor="@color/alto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Just now."/>

    </LinearLayout>

</LinearLayout>