<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/desertStorm"
    tools:showIn="@layout/item_report_back_expanded">

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:id="@+id/kudos_bar"
        android:layout_height="@dimen/kudos_bar"
        android:orientation="horizontal">

        <org.dosomething.letsdothis.ui.views.KudosView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:count="9"
            app:kudos="@integer/crown"/>

        <org.dosomething.letsdothis.ui.views.KudosView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:count="0"
            app:kudos="@integer/diamond"/>

        <org.dosomething.letsdothis.ui.views.KudosView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:count="99"
            app:kudos="@integer/fire"/>

        <org.dosomething.letsdothis.ui.views.KudosView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:count="3"
            app:selected="true"
            app:kudos="@integer/heart"/>

        <org.dosomething.letsdothis.ui.views.KudosView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:count="3"
            app:kudos="@integer/kudos"/>

        <org.dosomething.letsdothis.ui.views.KudosView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:count="3"
            app:kudos="@integer/lightbulb"/>

        <org.dosomething.letsdothis.ui.views.KudosView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:count="3"
            app:kudos="@integer/pizza"/>

        <org.dosomething.letsdothis.ui.views.KudosView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:count="3"
            app:kudos="@integer/planet"/>

        <org.dosomething.letsdothis.ui.views.KudosView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:count="3"
            app:kudos="@integer/poo"/>

        <org.dosomething.letsdothis.ui.views.KudosView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:count="3"
            app:kudos="@integer/skull"/>

        <org.dosomething.letsdothis.ui.views.KudosView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:count="3"
            app:kudos="@integer/trophy"/>
        
    </LinearLayout>


</HorizontalScrollView>