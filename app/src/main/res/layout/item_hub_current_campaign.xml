<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:id="@+id/root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/camp_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/campaign_height"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"/>

    <!--FIXME if the title is long, it'll overlap the count-->
    <org.dosomething.letsdothis.ui.views.typeface.CustomTextView
        android:id="@+id/title"
        tool:text="Title"
        app:typeface="brandon_bold"
        android:textAllCaps="true"
        android:textColor="@color/cerulean_1"
        android:layout_below="@id/camp_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <org.dosomething.letsdothis.ui.views.typeface.CustomTextView
        android:id="@+id/count"
        tool:text="5 people completed"
        app:typeface="brandon_bold"
        android:textAllCaps="true"
        android:textSize="@dimen/text_26"
        android:layout_alignParentRight="true"
        android:textColor="@color/gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <org.dosomething.letsdothis.ui.views.typeface.CustomTextView
        tool:text="Call to action"
        android:textColor="@android:color/black"
        android:id="@+id/call_to_action"
        android:layout_below="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_below="@id/call_to_action"
        android:orientation="horizontal"
        android:id="@+id/action_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <org.dosomething.letsdothis.ui.views.typeface.CustomButton
            style="@style/SecondaryButton"
            android:id="@+id/prove_share"
            android:layout_weight="1"
            android:layout_width="0dp"
            app:typeface="brandon_bold"
            android:layout_margin="@dimen/padding_tiny"
            android:text="@string/share_photo"
            android:layout_height="wrap_content"/>

        <org.dosomething.letsdothis.ui.views.typeface.CustomButton
            android:id="@+id/invite"
            app:typeface="brandon_bold"
            android:text="@string/invite_friends"
            android:layout_margin="@dimen/padding_tiny"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/friends_header"
        android:layout_below="@id/action_buttons">
        <org.dosomething.letsdothis.ui.views.typeface.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:textAllCaps="true"
            android:text="@string/friends"/>

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/padding_wedge"
            android:background="@color/gray"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/friends_header">
        <org.dosomething.letsdothis.ui.views.typeface.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tool:text="friend 1"/>
        <org.dosomething.letsdothis.ui.views.typeface.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tool:text="friend 2"/>
    </LinearLayout>
</RelativeLayout>