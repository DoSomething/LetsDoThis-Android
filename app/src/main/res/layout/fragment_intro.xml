<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/web_orange">

    <RelativeLayout
        android:id="@+id/slanted_bg"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#ffffff"
        android:layout_alignParentBottom="true">

        <ImageButton
            android:id="@+id/prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:src="@drawable/prev_intro_arrow"
            android:background="#00000000"
            android:padding="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>


        <ImageButton
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:padding="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/next_intro_arrow"
            android:background="#00000000"/>

        <org.dosomething.letsdothis.ui.views.typeface.CustomTextView
            android:id="@+id/intro_text"
            style="@style/IntroText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="@dimen/text_large"
            android:gravity="center"
            android:layout_toRightOf="@+id/prev"
            android:layout_toLeftOf="@id/next"
            android:lineSpacingExtra="5dp"
            tools:text="This is some intro text. and then here is some more text"/>

    </RelativeLayout>

</RelativeLayout>