<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:background="@color/desertStorm"
             android:layout_height="@dimen/invite_code_input">

    <org.dosomething.letsdothis.ui.views.typeface.CustomTextView
        android:layout_width="wrap_content"
        android:padding="@dimen/padding_medium"
        android:text="@string/join_group"
        android:layout_gravity="top|center_horizontal"
        android:textSize="@dimen/text_42"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingLeft="@dimen/padding_small"
        android:paddingRight="@dimen/padding_small"
        android:orientation="horizontal">

        <org.dosomething.letsdothis.ui.views.typeface.CustomEditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/word1"
            android:hint="Green"
            android:imeOptions="actionNext"
            style="@style/InviteCodeText"/>

        <org.dosomething.letsdothis.ui.views.typeface.CustomEditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/word2"
            android:hint="Round"
            android:layout_marginLeft="@dimen/padding_small"
            android:layout_marginRight="@dimen/padding_small"
            android:imeOptions="actionNext"
            style="@style/InviteCodeText"/>

        <org.dosomething.letsdothis.ui.views.typeface.CustomEditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/word3"
            android:hint="Dog"
            style="@style/InviteCodeText"/>


    </LinearLayout>

    <org.dosomething.letsdothis.ui.views.typeface.CustomButton
        android:id="@+id/join"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:typeface="brandon_bold"
        android:layout_margin="@dimen/padding_small"
        android:visibility="gone"
        tools:visibility="visible"
        android:text="@string/search_for_group"/>

</FrameLayout>