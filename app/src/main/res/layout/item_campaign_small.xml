<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/campaign_small_height">

    <FrameLayout
        android:layout_width="match_parent"
        android:id="@+id/image_container"
        android:layout_height="@dimen/campaign_small_height">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/campaign_small_height"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/darken_30"/>
    </FrameLayout>

    <org.dosomething.letsdothis.ui.views.typeface.CustomTextView
        android:id="@+id/title"
        tools:text="Title"
        android:textAllCaps="true"
        app:typeface="brandon_bold"
        android:textSize="@dimen/text_48"
        android:textColor="@android:color/white"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <org.dosomething.letsdothis.ui.views.typeface.CustomTextView
        android:layout_below="@+id/title"
        tools:text="Call to action"
        android:textSize="@dimen/text_33"
        android:layout_centerInParent="true"
        android:textColor="@android:color/white"
        android:id="@+id/call_to_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>