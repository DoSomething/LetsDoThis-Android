<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/image_and_title"
        android:layout_height="@dimen/campaign_height_expanded">

        <FrameLayout
            android:layout_width="match_parent"
            android:id="@+id/image_container"
            android:layout_height="@dimen/campaign_height_expanded">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/campaign_height_expanded"
                android:scaleType="centerCrop"
                android:src="@drawable/placeholder"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient"/>
        </FrameLayout>

        <org.dosomething.letsdothis.ui.views.typeface.CustomTextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:typeface="brandon_bold"
            android:textAllCaps="true"
            android:textSize="@dimen/text_48"
            android:layout_above="@+id/call_to_action"
            android:textColor="@android:color/white"
            android:layout_centerInParent="true"
            tools:text="Title"/>

        <org.dosomething.letsdothis.ui.views.typeface.CustomTextView
            android:id="@+id/call_to_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_33"
            android:textColor="@android:color/white"
            android:layout_centerInParent="true"
            android:layout_alignParentBottom="true"
            tools:text="Call to action"/>

    </RelativeLayout>

    <org.dosomething.letsdothis.ui.views.typeface.CustomTextView
        android:layout_below="@+id/image_and_title"
        android:id="@+id/problemFact"
        tools:text="Problem fact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!--FIXME we need some lightning here-->
    <org.dosomething.letsdothis.ui.views.typeface.CustomButton
        android:layout_below="@+id/problemFact"
        android:id="@+id/campaign_details"
        app:typeface="brandon_bold"
        android:textAllCaps="true"
        android:text="@string/stop_being_bored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/campaign_details"
        layout="@layout/item_hub_expire"/>
</RelativeLayout>