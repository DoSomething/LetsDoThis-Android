<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CustomTextView">
        <attr name="typeface"/>
    </declare-styleable>

    <!-- Changing the attribute must be reflected in the TypefaceManager -->
    <attr name="typeface" format="enum">
        <enum name="brandon_bold"           value="0"/>
        <enum name="brandon_regular"        value="1"/>
        <enum name="proxima_nova_bold"      value="3"/>
        <enum name="proxima_nova_regular"   value="4"/>
    </attr>
</resources>